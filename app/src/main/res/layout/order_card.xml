<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Bill_x"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#C0DEE8C8">

    <com.qmuiteam.qmui.layout.QMUIRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        >




        <!--<TextView-->
        <!--android:id="@+id/BillName"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="40dp"-->
        <!--android:text="XXX Parking"-->
        <!--android:textSize="28sp" />    -->
        <TextView
            android:id="@+id/OrderId"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="2019051000000100"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="#aa000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bill_PlateNum"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="50dp"
            android:text="XABC123"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ParkingTime"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="80dp"
            android:text="Time: 10:00-12:00"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="105dp"
            android:text="Time: 10:00-12:00"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TotalFee"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="80dp"
            android:text="Â¥ 27.5"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/PaymentState"
            android:layout_width="104dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="125dp"
            android:text="Unpaid"
            android:textColor="#E9643B"
            android:textSize="25sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/PayBtn"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="125dp"
            android:background="#FFEB3B"
            android:text="Pay"
            android:textSize="20dp" />



    </com.qmuiteam.qmui.layout.QMUIRelativeLayout>
</androidx.cardview.widget.CardView>
